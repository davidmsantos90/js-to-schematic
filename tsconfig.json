{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-ts",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": ["node", "esprima"]
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist", "dist-ts"]
}
